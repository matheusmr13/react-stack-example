{
	"extends": "airbnb",
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"jest": true
	},
	"rules": {
		"indent": [2, "tab"],
		"no-tabs": 0,
		"comma-dangle": ["error", "never"],
		"react/jsx-indent": [2, "tab"],
		"react/no-array-index-key": 0,
		"react/jsx-indent-props": [2, "tab"],
		"prefer-promise-reject-errors": 0,
		"react/jsx-filename-extension": [1, {
			"extensions": [".test.js", ".jsx"]
		}]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"paths": ["src"]
			}
		}
	}
}